{
  "manifest_version": 3,
  "name": "Thinker-AI",
  "version": "1.0",
  "permissions": ["tabs","system.display", "activeTab", "storage", "scripting"],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.ico",
      "48": "icons/icon48.ico",
      "128": "icons/icon128.ico"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["js/common.js","js/request_sender_background.js","js/web_socket_background.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
      "script-src": "'self'",
      "object-src": "'self'"
  }
}