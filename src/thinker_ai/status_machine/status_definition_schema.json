{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "StandardStateDefinition": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "is_start":{ "type": "boolean" },
        "state_context_class_name": { "type": "string" },
        "description": { "type": "string" },
        "task_type": { "type": "string" },
        "actions": {
          "type": "array",
          "items": { "type": "string" }
        },
        "events": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["id", "name", "description","task_type","actions","events","state_context_class_name"]
    },
    "EndStateDefinition": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "state_context_class_name": { "type": "string" }
      },
      "required": ["id", "name", "description","state_context_class_name"]
    },
    "State_Definition": {
      "oneOf": [
        { "$ref": "#/definitions/StandardStateDefinition" },
        { "$ref": "#/definitions/EndStateDefinition" }
      ]
    },
    "Transition": {
      "type": "object",
      "properties": {
        "event": { "type": "string" },
        "source": { "type": "string" },
        "target": { "type": "string" }
      },
      "required": ["event", "source", "target"]
    },
    "StateMachineDefinition": {
      "type": "object",
      "properties": {
        "description": { "type": "string" },
        "states_def": {
          "type": "array",
          "items": { "$ref": "#/definitions/State_Definition" }
        },
        "transitions": {
          "type": "array",
          "items": { "$ref": "#/definitions/Transition" }
        },
        "inner_state_to_outer_event": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        }
      },
      "required": ["description", "states_def", "transitions"],
      "additionalProperties": false
    }
  },
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_-]+$": { "$ref": "#/definitions/StateMachineDefinition" }
  },
  "additionalProperties": false
}
