{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "StateContext": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "state_def_name": { "type": "string" }
      },
      "required": ["id", "state_def_name"]
    },
    "StateMachineContext": {
      "type": "object",
      "properties": {
        "state_machine_def_name": { "type": "string" },
        "state_machine_def_group_name": { "type": "string" },
        "current_state_context": { "$ref": "#/definitions/StateContext" },
        "history": {
          "type": "array",
          "items": { "$ref": "#/definitions/StateContext" }
        }
      },
      "required": ["state_machine_def_name", "current_state_context", "history"]
    }
  },
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_-]+$": { "$ref": "#/definitions/StateMachineContext" }
  },
  "additionalProperties": false
}
