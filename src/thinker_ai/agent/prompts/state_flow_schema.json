{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Action": {
      "type": "object",
      "properties": {
        "command": { "type": "string" },
        "name": { "type": "string" }
      },
      "required": ["command", "name"]
    },
    "State": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "actions": {
          "type": "array",
          "items": { "$ref": "#/definitions/Action" }
        },
        "events": {
          "type": "array",
          "items": { "type": "string" }
        },
        "type": { "type": "string", "enum": ["start", "middle", "end"] },
        "outer_to_inner_command": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "inner_to_outer_event": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "inner_state_machine_definition_id": { "type": "string" }
      },
      "required": ["id", "name", "actions", "events", "type"]
    },
    "Transition": {
      "type": "object",
      "properties": {
        "event": { "type": "string" },
        "source": { "type": "string" },
        "target": { "type": "string" }
      },
      "required": ["event", "source", "target"]
    },
    "StateMachineDefinition": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "states": {
          "type": "array",
          "items": { "$ref": "#/definitions/State" }
        },
        "transitions": {
          "type": "array",
          "items": { "$ref": "#/definitions/Transition" }
        }
      },
      "required": ["id", "states", "transitions"]
    },
    "StateContext": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "state_id": { "type": "string" },
        "inner_state_machine_id": { "type": "string" }
      },
      "required": ["id", "state_id"]
    },
    "StateMachineContext": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "definition_id": { "type": "string" },
        "current_context": { "$ref": "#/definitions/StateContext" },
        "history": {
          "type": "array",
          "items": { "$ref": "#/definitions/StateContext" }
        }
      },
      "required": ["id", "definition_id", "current_context", "history"]
    }
  },
  "type": "object",
  "properties": {
    "state_machine_definitions": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/StateMachineDefinition" }
    },
    "state_machine_contexts": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/StateMachineContext" }
    }
  }
}
