{
  "compilerOptions": {
    "target": "ES6",                          // 编译目标 ECMAScript 版本
    "module": "ES6",                          // 使用 ES 模块
    "outDir": "./dist",                       // 编译后文件输出目录
    "rootDir": "./web/script",                       // TypeScript 源代码目录
    "strict": true,                           // 启用严格类型检查
    "esModuleInterop": true,                   // ES 模块互操作性
    "moduleResolution": "node"  // 确保使用 Node.js 模块解析方式
  },
  "include": ["./web/script/**/*.ts"],                 // 包含的文件
  "exclude": ["node_modules"]                 // 排除的文件
}